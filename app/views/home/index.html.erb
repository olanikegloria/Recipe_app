<div class="container">
    <div class="mb-4">
      <h2>Public Recipes</h2>
    </div>
    
      <% @recipes.each do |recipe|%>
    
          <div class="card  p-4 mb-3" >
            <div class="row">
              <div class="col-md-4">
                <h4><%= recipe.name %></h4>
              </div>
               <div class="col-md-8">
                  <h4><%= recipe.description %></h4>
               </div>
            </div>
          </div>
      <% end %>
  </div>


