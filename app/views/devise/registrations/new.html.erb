
   <section>
      <div class="container">

            <div class="rodw">
              <div class="d-flex justify-content-center align-items-center">
              <div class="col-md-6">

               <h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>



 <div class="row">
                  <div class="col-md-7 mb-3">
                    <div class="form-group">
    <%= f.label :name %><br />
    <%= f.email_field :name, autofocus: true, autocomplete: "email" , class: "form-control form-control-lg"%>
  </div>
  </div>
  </div>

 <div class="row">
                  <div class="col-md-7 mb-3">
                    <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "form-control form-control-lg"%>
  </div>
  </div>
  </div>

  <div class="row">
                  <div class="col-md-7 mb-3">
                    <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" , class: "form-control form-control-lg"%>
  </div>
  </div>
  </div>

  <div class="row">
                  <div class="col-md-7 mb-3">
                    <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg" %>
  </div>
  </div>
  </div>

  <div class="actions">
                  <%= f.submit 'Submit', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
</div>
</div>
