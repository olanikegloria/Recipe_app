<div class="container">
    <div class="d-flex justify-content-between items-center mb-4">
      <h2>Recipes</h2>
      <%= link_to 'Add New Recipe', new_recipe_path, class: 'btn btn-primary' %>
    </div>
    
      <% @recipes.each do |recipe|%>
     <%= link_to controller: 'recipes', action: 'show', id: recipe.id do %>
          <div class="card  p-4 mb-3" >
            <div class="row">
              <div class="col-md-4">
                <h4><%= recipe.name %></h4>
              </div>
               <div class="col-md-8">
                  <h4><%= recipe.description %></h4>
               </div>
            </div>

          <% if current_user.id  === recipe.user_id %>
            <%= link_to 'Delete Recipe', recipe_path(recipe), method: :delete, data: { confirm: 'Are you sure you want to delete this recipe?' } %>

        <% end %>
        </div>
         <% end %>
      <% end %>
  </div>


