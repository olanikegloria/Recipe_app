<div class="container">
     
     <h2 class="mb-4">New Food</h2>

        <%= form_with model: @food, url: foods_path, class: "form" do |f| %>
                <div class="row">
                  <div class="col-md-7 mb-3">
                    <div class="form-group">
                      <%= f.label :name %><br />
                      <%= f.text_field :name, autofocus: true, autocomplete: "name",  class: "form-control form-control-lg" %>
                    </div>
                  </div>
                </div>


                <div class="row">
                  <div class="col-md-7 mb-3">

                  <div class="row">
                  <div class="col-md-6 mb-3">
                    <div class="form-group">
                      <%= f.label :measurement_unit %><br />
                      <%= f.text_field :measurement_unit, autofocus: true, autocomplete: "measurement_unit",  class: "form-control form-control-lg" %>
                    </div>
                  </div>

                  <div class="col-md-6 mb-3">
                    <div class="form-group">
                      <%= f.label :price %><br />
                      <%= f.text_field :price, autofocus: true, autocomplete: "price",  class: "form-control form-control-lg" %>
                    </div>
                  </div>
                </div>
                </div>
                </div>

                

                <div class="row">
                  <div class="col-md-7 mb-3">
                    <div class="form-group">
                      <%= f.label :quantity %><br />
                      <%= f.text_area :quantity, autofocus: true, autocomplete: "quantity",  class: "form-control form-control-lg" %>
                    </div>
                  </div>
                </div>
                
                <div class="actions py-4">
                  <%= f.submit 'Submit', class: 'btn btn-primary' %>
                </div>
        <% end %>
                    
   
  </div>


