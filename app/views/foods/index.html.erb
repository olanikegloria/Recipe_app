<div class="container">
    <div class="d-flex justify-content-between items-center mb-4">
      <h2>Foods</h2>
      <%= link_to 'Add New Food', new_food_path, class: 'btn btn-primary' %>
    </div>
    
      <% @foods.each do |food|%>
     <%= link_to controller: 'foods', action: 'show', id: food.id do %>
          <div class="card  p-4 mb-3" >
            <div class="row">
              <div class="col-md-4">
                <h4><%= food.name %></h4>
              </div>
               <div class="col-md-8">
                  <h4><%= food.quantity%></h4>
               </div>
            </div>

          <% if current_user.id  === food.user_id %>
            <%= link_to 'Delete Food', food_path(food), method: :delete, data: { confirm: 'Are you sure you want to delete this food?' } %>

        <% end %>
        </div>
         <% end %>
      <% end %>
  </div>


